# Copy this file to .env.local (recommended) or .env.development / .env.production and fill in the values
# Local development: .env.local (highest priority, not committed)
# Production: configure environment on your host or use .env.production

# ==========================
# Admin Login (No Database)
# ==========================
# These variables enable admin login without any database.
# Either provide ADMIN_PASSWORD (plaintext, dev only) or ADMIN_PASSWORD_HASH (bcrypt hash, recommended for prod).
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
# ADMIN_PASSWORD=changeme
# ADMIN_PASSWORD_HASH=$2a$10$XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ADMIN_DISPLAY_NAME=Admin

# ==========================
# Baserow API Configuration (optional/legacy)
# ==========================
# Set USE_BASEROW=false or remove these if not using Baserow anymore.
USE_BASEROW=false
BASEROW_TOKEN=your_token_here
BASEROW_USER_TABLE_ID=your_user_table_id
BASEROW_DATABASE_ID=your_database_id
BASEROW_API_URL=https://your-baserow-instance.com/api
NEXT_PUBLIC_BASEROW_API_URL=https://your-baserow-instance.com/api

# Field names in Baserow
BASEROW_FIELD_USERNAME=field_xxxx
BASEROW_FIELD_PASSWORD=field_xxxx
BASEROW_FIELD_ROLE=field_xxxx
BASEROW_FIELD_EMAIL=field_xxxx

# Blog
BASEROW_BLOG_TABLE_ID=your_blog_table_id
NEXT_PUBLIC_BASEROW_BLOG_TABLE_ID=your_blog_table_id

# File operations
FILE_OPERATIONS_API=https://your-api-endpoint.com/api/file_operations
FILE_OPERATIONS_TOKEN=your_file_operations_token

# ==========================
# New Server (TUBOX/server) Configuration
# ==========================
# Base URL to your PHP server root
SERVER_BASE_URL=https://tubox.de/TUBOX/server
NEXT_PUBLIC_SERVER_BASE_URL=https://tubox.de/TUBOX/server
# Public uploads base (usually SERVER_BASE_URL + /uploads)
NEXT_PUBLIC_UPLOADS_BASE_URL=${NEXT_PUBLIC_SERVER_BASE_URL}/uploads
# Upload endpoint used by the Admin UI
NEXT_PUBLIC_UPLOAD_ENDPOINT=${NEXT_PUBLIC_SERVER_BASE_URL}/upload.php
# Token for API requests from browser (if needed by your PHP endpoints)
NEXT_PUBLIC_SERVER_API_TOKEN=your_server_api_token

# Environment (development/production)
NODE_ENV=development
